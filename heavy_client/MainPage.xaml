        <PasswordBox HorizontalAlignment="Center" Margin="0,229,0,0" VerticalAlignment="Top" Width="467"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,44,0,0" TextWrapping="Wrap" Text="Server Address" VerticalAlignment="Top"/>
